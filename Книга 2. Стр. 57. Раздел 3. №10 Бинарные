/* Создать файл, состоящий из n вещественных чисел.
Вывести на экран все числа данного файла, не попадающие в данный диапазон.
Книга 2. Стр. 57. Раздел 3. №10 */

#include <iostream>
#include <cmath>
#include <fstream>

using namespace std;


int main()
{
    ofstream f ("bin.dat", ios::binary);
    int n; float x;
    cout << "n="; cin >> n; cout << endl;
    float a,b; // диапазон
    cout << "a="; cin >> a; cout << endl;
    cout << "b="; cin >> b; cout << endl;
    for (int i=0; i<n; i++){
        cin >> x;
        f.write ((char *)&x,sizeof(x));
    }
    f.close();
    ifstream fin ("bin.dat", ios::binary);
    while (fin.peek() != EOF){
        fin.read ((char *)&x, sizeof(x));
        if (x<a && x>b){
            cout << x << endl;
        }
        fin.seekg(sizeof(x), ios::cur);
    }
    fin.close();
    return 0;
}
