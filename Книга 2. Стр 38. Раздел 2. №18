#include <iostream>
#include <climits>

using namespace std;

float F(float *a, int n, int i){
    if (i==0) { return 0;}
        else {
            if (a[i]> F(a, n , i--)) { return a[i];}
                else {F(a,n, i--); }
        }
}

int main()
{
    int n; cout << "n=" ; cin >> n; cout << endl;
    float a*=new float[n];
    for (int i=0; i<n; i++){
        cout <<"a["<<i<<"]="; cin >> a[i];
    }
    cout << F(a,n,n-1) << endl;
    return 0;
}
